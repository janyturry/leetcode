class Solution {
    public boolean checkSubarraySum(int[] nums, int k) {
       int n = nums.length;
        // 构建前缀数组
        int[] sum = new int[n + 1];
        Map<Integer, Integer> need = new HashMap<>();
        need.put(0, 0);
        
        for(int i = 1; i <= n ; i++){
            sum[i] = (sum[i - 1] + nums[i - 1]);
        }
        for (int i = 1; i <= n; i++) {
            if (need.containsKey(sum[i]%k)) {
                if (i - need.get(sum[i]%k) >= 2) {
                    return true;
                }
            } else {
                need.put(sum[i]%k, i);
            }
        }
        return false;   
    }
}
