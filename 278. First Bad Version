//278. First Bad Version
//leetcode
//基本思路就是使用二分法来找出最开始的坏的版本，题目的意思是最后的版本是坏的，然后找出第一个坏的
public class firstBadVersion {
	public int firstBadVersion(int n) {
		if(n <=0){
			return n;
		}
		
		int s = 1;
		int e = n;
		
		while(s+1 < e){
		    int mid = s + (e-s)/2;
		    if(isBadVersion(mid)){
		    	e = mid;
		    }else{
		    	s = mid;
		    }
		}
		
		  if(isBadVersion(s)){
		      return s;
		  }else{
			  return e;
		  }
	}
}
