class Solution {
    public int findMaxConsecutiveOnes(int[] nums) {
        int res = 0;
        int flag = 1;
        int r = 0;

        for(int num : nums){
            if(num ==1){
                flag = 1;
            }
            flag = flag * num;
            if(flag == 1){
                res++;
                r = Math.max(r, res);
            }else{
                res = 0;
            }
        }
        return r;
    }
}


