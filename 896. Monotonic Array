/*
Complexity Analysis

Time Complexity: O(N)O(N), where NN is the length of A.

Space Complexity: O(1)O(1).
*/




class Solution {
    public boolean isMonotonic(int[] A) {
        boolean increase = true;
        boolean decrease = true;
        
        for(int i = 0 ; i< A.length-1; i++){
            if(A[i] < A[i+1]){
                decrease = false;
            }
            
            if(A[i]> A[i+1]){
                increase = false;
            }
        }
        
        return decrease || increase;
    }
}
