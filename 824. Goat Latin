class Solution {
    public String toGoatLatin(String S) {
        HashSet<Character> set = new HashSet<>();
        for(char c: "AEIOUaeiou".toCharArray()){
            set.add(c);
        }
        
        String res = "";
        String [] str = S.split("\\s");
        int i = 0;
        for(String s: str){
            res +=" " +  (set.contains(s.charAt(0))? s : s.substring(1) + s.charAt(0) ) + "ma";
            i++;
            for(int j = 0 ;j < i; j++){
                res+= "a";
            }
        }
        return res.substring(1);
    }
}
