class Solution {
    public String addStrings(String num1, String num2) {
        int m = num1.length()-1;
        int n = num2.length()-1;

        int carry = 0;
        StringBuilder sb = new StringBuilder();

        while(m >=0 || n >=0){
            int sum = 0;
            if(m >=0){
                int curM = num1.charAt(m) - '0';
                sum+=curM;
                m--;
            }

            if(n >=0){
                int curN = num2.charAt(n) - '0';
                sum+=curN;
                n--;
            }
            sum = sum+carry;
            sb.append(sum%10);
            carry = sum/10;
        }

        if(carry >0){
            sb.append(carry);
        }

        return sb.reverse().toString();
    }
}
